<h1>Eat Da Burger!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR!</button>
        </form>

        <form action="/{{this.id}}?_method=DELETE" method="POST">
	  		<!-- option 2, pass in the id of the cat inside the form - you would access this in the route using req.body.id not req.params.id -->
	  		<input type="hidden" name="id" value="{{this.id}}"> 
	  		<button type="submit">DELETE!</button>
		</form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burger}}
  	{{#if this.devoured}}
  		<li>
        	{{this.burger_name}}
        		<form action="/update/{{this.id}}?_method=PUT" method="POST">
		        	<input type="hidden" name="devoured" value="false">
		        	<button type="submit">EAT DA BURGER!</button>
        		</form>

        		<form action="/{{this.id}}?_method=DELETE" method="POST">
			  		<!-- option 2, pass in the id of the cat inside the form - you would access this in the route using req.body.id not req.params.id -->
			  		<input type="hidden" name="id" value="{{this.id}}"> 
			  		<button type="submit">DELETE!</button>
				</form>
		</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-update-form" action="/create" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devou">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat . .
  </div>

  <button type="submit">Add Burger</button>
</form>